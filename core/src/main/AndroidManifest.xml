<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ouchadam.loldr">

  <application
    android:allowBackup="true"
    android:label="@string/app_name"
    android:icon="@mipmap/ic_launcher"
    android:theme="@style/AppTheme">

    <activity android:name="com.ouchadam.loldr.main.MainActivity" />

    <activity android:name="com.ouchadam.loldr.feed.FeedActivity">
      <intent-filter android:label="loldr feed">
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="${applicationId}.FEED" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>

    <activity android:name="com.ouchadam.loldr.post.PostActivity">
      <intent-filter android:label="loldr post">
        <action android:name="${applicationId}.POST" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>

    <activity-alias
      android:name="launcher_activity"
      android:label="@string/app_name"
      android:targetActivity="com.ouchadam.loldr.main.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

  </application>

</manifest>
