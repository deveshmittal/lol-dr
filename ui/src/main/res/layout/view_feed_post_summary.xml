<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:minHeight="112dp"
  android:layout_height="wrap_content">

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_gravity="bottom"
    android:background="#e5e5e5" />

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_weight="100"
      android:layout_height="wrap_content"
      android:paddingLeft="8dp">

      <TextView
        android:id="@+id/feed_post_summary_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#333333"
        android:textStyle="bold"
        android:paddingBottom="6dp" />

      <TextView
        android:id="@+id/feed_post_summary_text_author_and_subreddit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/primary"
        android:paddingBottom="3dp" />

      <TextView
        android:id="@+id/feed_post_summary_text_score_and_comment_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#555555" />

    </LinearLayout>

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:paddingLeft="8dp"
      android:paddingRight="8dp">

      <ImageView
        android:id="@+id/feed_post_summary_image_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical" />

    </FrameLayout>

  </LinearLayout>

</FrameLayout>
